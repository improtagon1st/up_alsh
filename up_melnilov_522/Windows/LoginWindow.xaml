<Window x:Class="up_melnilov_522.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход"
        Width="520" Height="340"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
            <Image Width="34" Height="34" Stretch="Uniform"
                   Source="pack://application:,,,/Resources/logo.png"
                   Margin="0,0,10,0"/>
            <TextBlock Text="ООО «Обувь» — Вход"
                       FontSize="22"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Карточка входа -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#7FFF00"
                BorderThickness="3"
                CornerRadius="14"
                Padding="18">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- login label -->
                    <RowDefinition Height="Auto"/>
                    <!-- login box -->
                    <RowDefinition Height="Auto"/>
                    <!-- pass label -->
                    <RowDefinition Height="Auto"/>
                    <!-- pass box -->
                    <RowDefinition Height="Auto"/>
                    <!-- buttons -->
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Логин:" Margin="0,0,0,6"/>
                <TextBox x:Name="TbLogin"
                         Grid.Row="1"
                         Height="30"
                         Margin="0,0,0,14"/>

                <TextBlock Grid.Row="2" Text="Пароль:" Margin="0,0,0,6"/>
                <PasswordBox x:Name="TbPassword"
                             Grid.Row="3"
                             Height="30"
                             Margin="0,0,0,18"/>

                <!-- Кнопки (подняты вверх от нижней границы) -->
                <Grid Grid.Row="4" HorizontalAlignment="Right" Margin="0,0,0,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Войти гостем"
                            Height="36"
                            MinWidth="160"
                            Padding="10,4"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Click="Guest_Click"/>

                    <Button Grid.Column="2"
                            Content="Войти"
                            Height="36"
                            MinWidth="120"
                            Padding="10,4"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="#00FA9A"
                            BorderBrush="#00FA9A"
                            Click="Login_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>

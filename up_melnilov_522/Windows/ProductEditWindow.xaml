<Window x:Class="up_melnilov_522.Windows.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товар"
        Width="760" Height="560"
        WindowStartupLocation="CenterOwner"
        Background="White">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0">
                <TextBlock Text="Фото товара:" FontWeight="Bold" Margin="0,0,0,8"/>
                <Border BorderThickness="1" BorderBrush="Black" Width="220" Height="150">
                    <Image x:Name="ImgPhoto" Stretch="UniformToFill"/>
                </Border>

                <Button x:Name="BtnChoosePhoto" Content="Выбрать фото" Padding="10,6" Margin="0,10,0,0"
                        Click="BtnChoosePhoto_Click"/>

                <TextBlock x:Name="TbPhotoInfo" TextWrapping="Wrap" Margin="0,8,0,0" />
                <TextBlock Text="Ограничение: не больше 300×200 px" Foreground="Gray" Margin="0,6,0,0"/>
            </StackPanel>

            <!-- Поля -->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
               
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

            
                <TextBlock x:Name="LblId" Grid.Row="0" Grid.Column="0" Text="ID:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox x:Name="TbId" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,10" IsReadOnly="True"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Наименование:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="TbName" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Категория:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="CbCategory" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Описание:" Margin="0,0,10,10"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TbDescription" Height="80" Margin="0,0,0,10"
                         TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Производитель:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="4" Grid.Column="1" x:Name="CbManufacturer" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="Поставщик:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="CbSupplier" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="6" Grid.Column="0" Text="Цена:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="TbPrice" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="7" Grid.Column="0" Text="Ед. измерения:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="TbUnit" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="8" Grid.Column="0" Text="Кол-во на складе:" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="8" Grid.Column="1" x:Name="TbStock" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="9" Grid.Column="0" Text="Скидка (%):" Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="9" Grid.Column="1" x:Name="TbDiscount" Height="28" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="10" Grid.Column="0" Text="Путь фото (БД):" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBox Grid.Row="10" Grid.Column="1" x:Name="TbPhotoPath" Height="28" IsReadOnly="True"/>
            </Grid>
        </Grid>


        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Назад" Padding="12,6" Margin="0,0,10,0" Click="BtnBack_Click"/>
            <Button Content="Сохранить" Padding="12,6" Background="#00FA9A" BorderBrush="#00FA9A" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
